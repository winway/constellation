<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PartnerAnalysisActivity">

    <include layout="@layout/layout_header" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/partner_analysis_male_logo_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:civ_border_color="@color/lightblue"
            app:civ_border_width="2dp"
            tools:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="+"
            android:textSize="60sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/partner_analysis_female_logo_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            app:civ_border_color="@color/lightpink"
            app:civ_border_width="2dp"
            tools:src="@drawable/ic_launcher_foreground" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/partner_analysis_male_name_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="50dp"
            android:layout_weight="1"
            android:gravity="end"
            android:textColor="@color/lightblue"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="白羊座" />

        <TextView
            android:id="@+id/partner_analysis_female_name_iv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="50dp"
            android:layout_weight="1"
            android:gravity="start"
            android:textColor="@color/lightpink"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="白羊座" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/partner_analysis_pd_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|start"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/partner_analysis_vs_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|start"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/partner_analysis_pf_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|start"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/partner_analysis_bz_tv"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center|start"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/partner_analysis_jx_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/partner_analysis_zy_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginTop="10dp"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>